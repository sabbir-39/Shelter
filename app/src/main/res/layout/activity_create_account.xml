<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zeroonelab.www.shelter.CreateAccount">
    <include
        android:id="@+id/CreateAccountToolbar"
        layout="@layout/custom_toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/CreateAccountToolbar"
        android:background="@android:color/holo_red_light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <EditText
                android:id="@+id/CreateAccountEtName"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:hint="Name"
                android:gravity="center"
                android:inputType="textPersonName"
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                android:layout_marginTop="@dimen/createAcDistanceBetweenTwo"/>

            <EditText
                android:id="@+id/CreateAccountEtContactNumber"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:hint="Mobile Number"
                android:gravity="center"
                android:inputType="number"
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                android:layout_marginTop="@dimen/createAcDistanceBetweenTwo"/>

            <EditText
                android:id="@+id/CreateAccountEtEmail"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:hint="E-Mail Address"
                android:gravity="center"
                android:inputType="textEmailAddress"
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                android:layout_marginTop="@dimen/createAcDistanceBetweenTwo"/>

            <EditText
                android:id="@+id/CreateAccountEtPassword"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:hint="Password"
                android:gravity="center"
                android:inputType="textPassword"
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                android:layout_marginTop="@dimen/createAcDistanceBetweenTwo"/>
            <Button
                android:id="@+id/CreateAccountBtnCreateAc"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/sign_up"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_white_corner"
                android:textAllCaps="false"
                android:layout_marginTop="15dp"
                android:layout_gravity="center" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
